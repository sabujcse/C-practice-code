@model HelloWorlMvc.Models.Student
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@if (ViewBag.Fmsg != null)
{
    <p>@(ViewBag.Fmsg)</p>
}
@using (Html.BeginForm())
{
    @Html.HiddenFor(c=>c.Id)
        <div>
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(c => c.Name)
                    </td>
                    <td>
                        @Html.TextBoxFor(c => c.Name)
                        @Html.ValidationMessageFor(c=> c.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(c => c.Address)
                    </td>
                    <td>
                        @Html.TextBoxFor(c => c.Address)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("RegNo")
                    </td>
                    <td>
                        @Html.TextBox("RegNo")
                        @Html.ValidationMessageFor(c=>c.RegNo)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(c => c.SubDistrictId)
                    </td>
                    <td>
                        @Html.DropDownListFor(c => c.SubDistrictId, Model.SubdistrictLookUp)
                        @Html.ValidationMessageFor(c=>c.SubDistrictId)
                    </td>
                </tr>

                <tr>
                    <td>
                        Action
                    </td>
                    <td>
                        <input type="submit" value="Update" />
                    </td>
                </tr>

            </table>
   
     </div>
}

