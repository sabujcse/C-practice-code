@using WebApplication13.ViewModel
@model EmployeeListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetView</title>
</head>
<body style="background-color:aqua">
    Hello @Model.UserName
    <hr />
    <div> 
        <table border="1">
            <tr>
                <th>Employee Name</th>
                <th>Employee Salary</th>
            </tr>

            @foreach (EmployeeViewModel item in Model.employeeViews)
            {
                <tr>
                <td>@item.FullName</td>
                <td style="background-color:@item.SalaryColor">@item.Salary</td>
                </tr>
            }

            </table>
    </div>
</body>
</html>
